{{! Nav Bar }}

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">Mongo-Scraper</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                    <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                     <a class="nav-item nav-link" href="/saved">Saved Articles</a>
                    </li>
                    <li class="nav-item">
                      <button type="button" class="btn btn-primary" id="scrape">Scrape Articles</button>
                    </li>
                  
                  </ul>
                </div>
              </nav>

{{! Main Header Image }}
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center">Mongo-Scraper</h1>
    <p class="lead text-center">View The Latest News From Dogtime</p>
  </div>
</div>

{{! Articles }}
<div class="articles">
    <div class="load"></div>
    {{#each articles }}
        {{#unless saved}}
        <div class="article">
            <a href="{{link}}"><h2>{{title}}</h2></a>
            <p>{{summary}}</p>
            <button class="btn btn-primary save" data-id="{{_id}}">Save</button>
            <br>
        </div>
        {{/unless}}
    {{/each}}
</div>


